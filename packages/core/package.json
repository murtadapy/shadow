{
  "name": "@shadow-js/core",
  "version": "0.1.0",
  "description": "ShadowJS core reactivity and DOM runtime",
  "author": "Jehaad AL-Johani",
  "homepage": "https://github.com/shadowjs-dev/shadow#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowjs-dev/shadow.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/shadowjs-dev/shadow/issues"
  },
  "keywords": [
    "shadowjs",
    "jsx",
    "framework",
    "reactivity",
    "dom"
  ],
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.cjs"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
